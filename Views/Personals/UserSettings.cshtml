@model ExFit.Models.PersonalsViewModel
@{
    if (Model.User.User_ID == 0)
    {
        Layout = "~/Views/Shared/_LayoutPartial.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
    <div class="email-right-aside bookmark-tabcontent contacts-tabs">
        <div class="card email-body radius-left">
            <div class="ps-0">
                <div class="tab-content">
                    <div class="tab-pane fade active show" id="pills-personal" role="tabpanel" aria-labelledby="pills-personal-tab">
                        <div class="card mb-0">
                            <div class="card-header d-flex">
                                @if (Model.SelectedUser.User_ID == Model.User.User_ID)
                                {
                                    <h5>Hesap Ayarları</h5>
                                }
                                else
                                {
                                    <h5>Personel Kartı</h5>
                                }
                            </div>
                            <div class="card-body">
                                <div class="row list-persons" id="addcon">
                                    <div id="divEditPage">


                                        <div class="tab-content" id="v-pills-tabContent">
                                            <div class="tab-pane tab-content-child fade show active" id="v-pills-user" role="tabpanel" aria-labelledby="v-pills-user-tab">
                                                <div class="profile-mail">
                                                    <div class="media align-items-center">
                                                        <img class="img-100 img-fluid m-r-20 rounded-circle update_img_0" src="@Model.SelectedUser.IMG" alt="">
                                                        <input class="updateimg" type="file" name="img" onchange="readURL(this,0)">
                                                        <div class="media-body mt-0">
                                                            <h5><span class="first_name_0">@Model.SelectedUser.Name</span><span class="last_name_0">@Model.SelectedUser.Surname</span></h5>
                                                            <p class="email_add_0">@Model.SelectedUser.Mail</p>
                                                            <ul>
                                                                <li><a onclick="printContact(0)" data-bs-toggle="modal" data-bs-target="#printModal">Hesabı Kapat</a></li>
                                                                <li><a onclick="printContact(0)" data-bs-toggle="modal" data-bs-target="#printModal">Yazdır</a></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="email-general">
                                                        <h6 class="mb-3">General</h6>
                                                        <ul>
                                                            <li>İsim <span class="font-primary first_name_0">@Model.SelectedUser.Name</span></li>
                                                            <li>Soyisim <span class="font-primary">@Model.SelectedUser.Surname</span></li>
                                                            <li>Pozisyon<span class="font-primary personality_0">@Model.SelectedUser.Position</span></li>
                                                            <li>Telefon Numarası<span class="font-primary mobile_num_0">@Model.SelectedUser.Phone</span></li>
                                                            <li>Email Address <span class="font-primary email_add_0">@Model.SelectedUser.Mail</span></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div id="editpersonalform" class="contact-editform">
                                            <form enctype="multipart/form-data" method="POST" asp-controller="Personals" asp-action="Registrying">
                                                <div class="row g-2">
                                                    <div class="mt-0 mb-3 col-md-12">
                                                        <label>İsim</label>
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                @Html.TextBoxFor(m => m.SelectedUser.Name, new{ @class="form-control", @type="text", @required="", @placeholder="İsim"})
                                                            </div>
                                                            <div class="col-sm-6">
                                                                @Html.TextBoxFor(m => m.SelectedUser.Surname, new{ @class="form-control", @type="text", @required="", @placeholder="Soyisim"})
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="mt-0 mb-3 col-md-12">
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                <label>Email</label>
                                                                @Html.TextBoxFor(m => m.SelectedUser.Mail, new{ @class="form-control", @type="text", @required="", @placeholder="Mail"})
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <label></label>
                                                                @Html.TextBoxFor(m => m.SelectedUser.Phone, new{ @class="form-control", @type="text", @required="", @placeholder="Telefon Numarası"})
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="mt-0 mb-3 col-md-12">
                                                        <label>Resim</label>
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                @Html.HiddenFor(m => m.SelectedUser.IMG, new{ @class="form-control"})
                                                                @Html.HiddenFor(m => m.SelectedUser.Type, new{ @class="form-control"})
                                                                @Html.HiddenFor(m => m.SelectedUser.User_ID, new{ @class="form-control"})

                                                                @Html.TextBoxFor(m => m.file, new{ @class="form-control", @type="file", @name="file",})
                                                            </div>
                                                            <div class="col-sm-6">
                                                                @Html.TextBoxFor(m => m.SelectedUser.Position, new{ @class="form-control", @type="text", @required="", @placeholder="Pozisyon"})
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="mt-0 mb-3 col-md-12">
                                                        <label>Parola</label>
                                                        <div class="row">
                                                            <div class="col-sm-12">
                                                                @Html.TextBoxFor(m => m.SelectedUser.Password, new{ @class="form-control", @required="", @placeholder="Parola"})
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                @if (Model.User.User_ID == Model.SelectedUser.User_ID || Model.User.Type == 1)
                                                {
                                                    <button class="btn btn-primary update-contact" type="submit">Yönetici Olarak Güncelle</button>
                                                    <button class="btn btn-danger update-contact" type="submit">İşten Çıkar</button>
                                                }
                                            </form>
